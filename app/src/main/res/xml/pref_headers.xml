<preference-headers xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- These settings headers are only used on tablets. -->

    <header
        android:key="permiso_notificaciones_category_key"
        android:title="Permiso Notificaciones"
        android:icon="@mipmap/permission"
        android:summary="Activar/desactivar el acceso"
        >
    <intent android:action="android.settings.ACTION_NOTIFICATION_LISTENER_SETTINGS" />
    </header>


    <header android:key="bluetooth_category_key"
        android:title="Bluetooth"
        android:icon="@mipmap/bluetooth"
        android:summary="Disponible. Desconectado"
        >
    <intent android:targetPackage="es.dlacalle.finalpfg"
        android:targetClass="es.dlacalle.finalpfg.BluetoothActivity"
        />
    </header>

    <header android:fragment="es.dlacalle.finalpfg.MainActivity$NotificationPreferenceFragment"
        android:title="App no seleccionada"
        android:icon="@mipmap/app"
        android:key="app_monitorizada"
        android:summary="No se monitoriza ninguna aplicación" />
    <header android:fragment="es.dlacalle.finalpfg.MainActivity$DataSyncPreferenceFragment"
        android:title="Configuración"
        android:icon="@mipmap/settings"
        android:summary="Display, Notificaciones, GPS..." />

<header android:key = "save_log"
    android:title="Guardar LOG"
    android:icon="@mipmap/savelog"
    android:defaultValue="pfg.log"
    android:dialogTitle="Nombre del archivo"
    android:positiveButtonText="Guardar"
    android:negativeButtonText="Cancelar"
    >

</header>

</preference-headers>
