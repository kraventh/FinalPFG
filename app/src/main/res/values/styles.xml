<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3DA5FF</item>
        <item name="colorPrimaryDark">#3D85FF</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>


    </style>
    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#3DA5FF</item>
        <item name="android:height">48dp</item>
        <item name="android:logo">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/MyActionBar.TitleText</item>
        <item name="android:colorPrimaryDark">#3D85FF</item>
    </style>

    <style name="MyActionBar.TitleText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
